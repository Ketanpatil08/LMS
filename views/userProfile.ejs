<link rel="stylesheet" href="/styles/adminSidebar.css">
<link rel="stylesheet" href="/styles/userDashboard.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex">
  <%- include('userSidebar.ejs') %>
  <div class="main-content">
    <div class="dashboard-container" style="max-width: 600px;">
      <div class="welcome-card" style="justify-content: flex-start;">
        <i class="fa fa-user-circle" style="font-size:3rem;color:#296ed6;"></i>
        <div>
          <div class="welcome-title" style="font-size:1.5rem;">Profile</div>
          <div class="welcome-desc">Your personal information</div>
        </div>
      </div>
      <div style="padding: 24px 32px;">
        <table style="width:100%; font-size:1.1rem;">
          <tr>
            <td style="font-weight:600; padding:10px 0;">Name:</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td style="font-weight:600; padding:10px 0;">Email:</td>
            <td><%= user.email %></td>
          </tr>
          <tr>
            <td style="font-weight:600; padding:10px 0;">Role:</td>
            <td><%= user.role %></td>
          </tr>
          <tr>
            <td style="font-weight:600; padding:10px 0;">Joined:</td>
            <td><%= user.created_at %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>