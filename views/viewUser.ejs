<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Users</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/adminDashboard.css">
  <link rel="stylesheet" href="/styles/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  
  
 
</head>
<body>
  <div class="admin-layout">
    <%- include('adminSidebar.ejs') %>
    <div class="main-content">
      <h2 class="mb-4" style="font-weight:700; color:#1976d2;">Users</h2>
      
      <div class="search-bar" style="margin-bottom: 1.5rem; text-align:right;">
        <input type="text" id="searchInput" placeholder="Search..." style="padding:0.6em 1em; border-radius:8px; border:1px solid #ddd; width:220px;">
      </div>
      
      <div class="table-responsive">
        <table id="dataTable" class="table table-hover align-middle shadow-sm rounded">
          <thead>
            <tr>
              <th>Sr. No.</th>
              <th>Name</th>
              <th>Email / Username</th>
              <th>Role</th>
              <th>Admission Date</th>
              <th>Update</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, idx) => { %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <span class="badge bg-info"><%= user.role %></span>
              </td>
              <td>
                <%= user.created_at.toLocaleString ? user.created_at.toLocaleString() : user.created_at %>
              </td>
              <td>
                <a href="/updateUser/<%= user.id %>" class="btn btn-sm btn-warning" title="Update">
                  <i class="fas fa-edit"></i>
                </a>
              </td>
              <td>
                <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure?')">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Pagination below the table -->
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= page - 1 %>">Previous</a>
    </li>
    <% for(let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= page === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>
    <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= page + 1 %>">Next</a>
    </li>
  </ul>
</nav>
    </div>
  </div>

  <script>
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const dataTable = document.getElementById('dataTable');

  searchInput.addEventListener('input', function () {
      const filter = searchInput.value.toLowerCase();
      const rows = dataTable.getElementsByTagName('tr');

      Array.from(rows).forEach((row, idx) => {
          // Skip header row
          if(idx === 0) return;
          const cells = row.getElementsByTagName('td');
          const match = Array.from(cells).some(cell => cell.textContent.toLowerCase().includes(filter));
          row.style.display = match ? '' : 'none';
      });
  });
</script>
</body>
</html>
