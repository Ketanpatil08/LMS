<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Users</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/adminDashboard.css">
  <link rel="stylesheet" href="/styles/admin.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  
  
 
</head>
<body>
  <div class="admin-layout">
    <%- include('adminSidebar.ejs') %>
    <div class="main-content">
      <h2 class="mb-4" style="font-weight:700; color:#1976d2;">Users</h2>
      <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm rounded">
          <thead>
            <tr>
              <th>Sr. No.</th>
              <th>Name</th>
              <th>Email / Username</th>
              <th>Role</th>
              <th>Admission Date</th>
              <th>Update</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, idx) => { %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <span class="badge bg-info"><%= user.role %></span>
              </td>
              <td>
                <%= user.created_at.toLocaleString ? user.created_at.toLocaleString() : user.created_at %>
              </td>
              <td>
                <a href="/updateUser/<%= user.id %>" class="btn btn-sm btn-warning" title="Update">
                  <i class="fas fa-edit"></i>
                </a>
              </td>
              <td>
                <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure?')">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
