<link rel="stylesheet" href="/styles/adminSidebar.css">
<link rel="stylesheet" href="/styles/books.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<!-- bootstrap link -->
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">


<div class="d-flex">
  <%- include('userSidebar.ejs') %>
  <div class="main-content">
    <div class="dashboard-container" style="max-width: 1100px;">
      <div style="font-size:1.6rem; font-weight:700; margin-bottom:24px; color:#296ed6;">
        <i class="fa fa-book"></i> Library Books
      </div>
      <div class="books-grid">
        <% books.forEach(book => { %>
          <div class="book-card">
            <div class="book-icon">
              <% if (book.image) { %>
                <img src="<%= book.image %>" alt="Book Image" style="width:48px;height:64px;object-fit:cover;border-radius:6px;">
              <% } else { %>
                <i class="fa fa-book"></i>
              <% } %>
            </div>
            <div class="book-title"><%= book.title %></div>
            <div class="book-author"><i class="fa fa-user"></i> <%= book.author %></div>
            <div class="book-meta">
              <span class="book-category"><i class="fa fa-tag"></i> <%= book.category %></span>
              <% if (book.available) { %>
                <span class="book-available">Available</span>
              <% } else { %>
                <span class="book-unavailable">Issued</span>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>